@model MVCWithADO.Models.Employee
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <form action="/Employee/Update" method="post">
            <div class="mb-3">
                <label for="eno" class="form-label">Eno</label>
                <input type="text" class="form-control" id="eno" readonly value="@Model.Eno" name="Eno">
            </div>
            <div class="mb-3">
                <label for="ename" class="form-label">Ename</label>
                <input type="text" class="form-control" id="ename" value="@Model.Ename" name="Ename">
            </div>
            <div class="mb-3">
                <label for="salary" class="form-label">Salary</label>
                <input type="text" class="form-control" id="salary" value="@Model.Salary" name="Salary">
            </div>
            <div class="mb-3">
                <label for="job" class="form-label">Job</label>
                <input type="text" class="form-control" id="job" value="@Model.Job" name="Job">
            </div>
            <div class="mb-3">
                <label for="deptNo" class="form-label">DeptNo</label>
                <input type="text" class="form-control" id="deptNo" value="@Model.DeptID" name="DeptID">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
        <div>
            <a href="/" class="btn btn-info">Back to Index</a>
        </div>
    </div>
</body>
</html>
